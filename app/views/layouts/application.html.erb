<!DOCTYPE html>
<html>
  <head>
    <title>Homes</title>
    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "listings" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "bootstrap" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">
            Did you buy that house yet?
          </a>
          <ul class="nav">
            <% @lists.each do |list| %>
              <%= navigation_link_for(list) %>
            <% end %>
            <li>
              <a id="add-list" href="#">
                <i class="icon-plus-sign icon-white"></i>
              </a>
            </li>
          </ul>
          <form class="navbar-search pull-right" action="/listings/search">
            <input name="address" type="text" class="search-query" placeholder="Search Addresses" />
          </form>
        </div>
      </div>
    </div>

    <%= yield %>

  </body>
</html>
